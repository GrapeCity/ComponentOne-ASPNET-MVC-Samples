@using Resources;
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title@(Resource.Layout_TitleSuffix)</title>
        <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/Content/favicon/apple-touch-icon180.png")">
        <link rel="icon" type="image/png" href="@Url.Content("~/Content/favicon/logo32.png")" sizes="32x32">
        <link rel="icon" type="image/png" href="@Url.Content("~/Content/favicon/logo16.png")" sizes="16x16">
        <link rel="manifest" href="@Url.Content("~/Content/favicon/manifest.json")">
        <link rel="mask-icon" href="@Url.Content("~/Content/favicon/safari-pinned-tab.svg")" color="#697683">

        <meta name="viewport" content="width=device-width" />

        <!-- styles -->
        <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
        <link rel="stylesheet" href="@Url.Content(Resource.GcIconsCssPath)" />
        <link rel="stylesheet" href="@Url.Content("~/Content/css/app.css")" />
        @Html.C1().Styles()

        <!-- scripts -->
        @Html.C1().Scripts().Basic(b => b.Grid())
        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/MultiLevelMenu.js"></script>
        <script src="~/Scripts/AccessibilityExtender.js"></script>
        <script src="~/Scripts/app.js"></script>
    </head>
    <body>
        <div class="hide">
            @Html.Partial("_SiteNav", true)
        </div>
        <header>
            <div class="hamburger-nav-btn narrow-screen"><span class="icon-bars-w"></span></div>
            <div class="menu-container">
                <div class="menu-left">
                    <a href="@(Resource.Layout_ProductUrl)" target="_blank">
                        <img src="~/Content/css/images/logotext_w.png" class="gcicon-logo-gc-horiz" alt="mescius" />
                    </a>
                </div>
                <div class="menu-divide"></div>
                <div class="menu-main">
                    <span class="semi-bold narrow-screen">ComponentOne @Resource.Layout_ShortTitle</span>
                    <span class="semi-bold wide-screen">ComponentOne @Resource.Layout_LongTitle</span>
                </div>
                <div class="menu-right">
                    @Html.Partial("_SiteNav", false)
                </div>
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
        <footer>
            <a href="@(Resource.Layout_Url)">
                <img src="~/Content/css/images/logotext.png" class="gcicon-logo-gc-horiz" alt="mescius" />
            </a>
            <p>
                © @DateTime.Now.Year @Html.Raw(Resource.Layout_License1)<br />
                @Html.Raw(Resource.Layout_License2)
            </p>

        </footer>
    </body>
</html>
