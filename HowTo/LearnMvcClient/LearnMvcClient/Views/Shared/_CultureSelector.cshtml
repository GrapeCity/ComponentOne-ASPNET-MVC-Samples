<script id="comboCultureItemTemp" type="text/template">
    <a href="{{Path}}" class="culture-selector-link">{{DisplayText}}</a>
</script>
@{
    LearnMvcClient.Models.Culture.CurrentCulture = Request.QueryString["culture"];
}
@(Html.C1().ComboBox().Id("theCulture")
        .Bind(LearnMvcClient.Models.Culture.GetAll())
        .IsEditable(false)
        .DisplayMemberPath("Name")
        .ItemTemplateId("comboCultureItemTemp")
        .SelectedIndex(LearnMvcClient.Models.Culture.GetCurrentCultureIndex())
)