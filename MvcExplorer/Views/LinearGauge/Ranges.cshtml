@{
    ClientSettingsModel demoSettingsModel = ViewBag.DemoSettingsModel;
}

@(Html.C1().LinearGauge().Id(demoSettingsModel.ControlId)
    .Min(0).Max(10).Value(1)
    .Ranges(items => items
        .Add(item => item.Min(2).Max(3).Color(System.Drawing.Color.Green))
        .Add(item => item.Min(6).Max(9).Color(System.Drawing.Color.Yellow))
    )
    .Width(500)
)

@section Description{
    @Html.Raw(Resources.LinearGauge.Ranges_Text0)
}