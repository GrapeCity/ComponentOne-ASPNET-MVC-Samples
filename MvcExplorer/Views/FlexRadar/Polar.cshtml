@model IEnumerable<MapData>
@using C1.Web.Mvc.Chart

@{
    ViewBag.DemoSettings = true;
    ClientSettingsModel demoSettingsModel = ViewBag.DemoSettingsModel;
}

@(Html.C1().FlexRadar().Id(demoSettingsModel.ControlId)
    .ChartType(demoSettingsModel.GetEnum("ChartType", C1.Web.Mvc.Chart.RadarChartType.Line))
    .Stacking(demoSettingsModel.GetEnum("Stacking", C1.Web.Mvc.Chart.Stacking.None))
    .Bind("Longitude", "Latitude1", Model)
    .Series(ser =>
    {
        ser.Add().Name("Latitude1");
        ser.Add().Binding("Latitude2").Name("Latitude2");
    })
    .Legend(Position.Top)

    .Width("500px")
    .Height("500px")
)

@section Description{
    <p>@Html.Raw(Resources.FlexRadar.Polar_Text0)</p>
}