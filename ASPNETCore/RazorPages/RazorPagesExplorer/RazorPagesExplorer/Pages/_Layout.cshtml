<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - C1 ASP.NET MVC</title>
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/Content/favicon/apple-touch-icon180.png")">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/favicon/logo32.png")" sizes="32x32">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/favicon/logo16.png")" sizes="16x16">
    <link rel="manifest" href="@Url.Content("~/Content/favicon/manifest.json")">
    <link rel="mask-icon" href="@Url.Content("~/Content/favicon/safari-pinned-tab.svg")" color="#697683">

    @{
        Theme.SetCurrentTheme(Context, Context.Request.Query["theme"]);
    }
    <c1-styles theme="@Theme.GetCurrentTheme(Context)" />
    <link href="~/Content/css/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/explorer.css" rel="stylesheet" />
    <link href="~/Content/css/site.css" rel="stylesheet" />
    <link href="~/Content/css/app.css" rel="stylesheet" />
    @RenderSection("Styles", false)

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/Scripts/jszip.min.js"></script>
    <c1-scripts>
        <c1-basic-scripts />
    </c1-scripts>
    <script src="~/Content/css/bootstrap/js/bootstrap.js"></script>
    <script src="~/Scripts/MultiLevelMenu.js"></script>
    <script src="~/Scripts/Layout.js"></script>
    @RenderSection("Scripts", false)
</head>
<body>
    <div class="hide">
        @await Html.PartialAsync("_SiteNav", true)
    </div>
    <header>
        <div class="hamburger-nav-btn narrow-screen"><span class="icon-bars-w"></span></div>
        
        <div class="menu-container">
            <div class="menu-left">
                <a href="https://developer.mescius.com/aspnet-mvc" target="_blank">
                    <img src="~/Content/css/images/logotext_w.png" class="gcicon-logo-gc-horiz" alt="mescius" />
                </a>
            </div>
            <div class="menu-divide"></div>
            <div class="menu-main">
                <span class="semi-bold narrow-screen">ComponentOne MVC Razor Pages Explorer</span>
                <span class="semi-bold wide-screen">ComponentOne ASP.NET MVC Edition Razor Pages Explorer</span>
            </div>
            <div class="menu-right">
                @await Html.PartialAsync("_ThemeSelector")
                @await Html.PartialAsync("_SiteNav", false)
            </div>
        </div>
    </header>
    <div class="main-content">
        @RenderBody()
    </div>
    <footer>
        <a href="http://developer.mescius.com/">
            <img src="~/Content/css/images/logotext.png" class="gcicon-logo-gc-horiz" alt="mescius" />
        </a>
        <p>
            © @DateTime.Now.Year MESCIUS inc. All rights reserved.<br />
            All product and company names here in may be trademarks of their respective owners.
        </p>
    </footer>
</body>
</html>